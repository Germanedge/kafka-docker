{
    "leave_on_terminate": true,
    "service": {
        "name": "kafka",
        "port": 9092,
        "tags": [
            "primary",
            "application",
            "prometheus"
        ],
        "meta": {
            "scrape_path": "/metrics",
            "scrape_port": 7071
        },
        "check": {
            "id": "kafka_status",
            "name": "kafka Status",
            "tcp": "localhost:9092",
            "interval": "30s",
            "timeout": "20s"
        }
    }
}
