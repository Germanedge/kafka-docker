{
    "name" : "kafka",
    "jsonversion" : "1",
    "description" : "kafka",
    "homepage" : "https://github.com/germanedge/kafka",
    "keywords" : ["kafka", "message bus"],
    "author" : "Christoph Heuwieser <Christoph.Heuwieser@crossvault.de>",
    "contributors" : ["Karol Rebis <karol.rebis@silevis.com>", "Niels Oldenburg <niels.oldenburg@germanedge.com>"],
    "repository" : {
      "type": "docker",
      "url": "germanedge-docker.artifactory.new-solutions.com/edge-one/"
    },
    "entrypoint" : "entrypoint.sh",
    "dockerfile" : "Dockerfile",
    "version" : "",
    "profiles" : {
        "production" : {
            "configuration" : {
                "ports" : ["9092:9092"],
                "volumes" : [],
                "environments" : [],
                "command" : [],
                "depends_on" : [],
                "deploy": {
                    "mode" : {"name":"mode","value":"replicated"},
                    "replicas": {"value":2},
                    "resources": {
                        "limits" : {"name":"memory","value":"2048M"}
                    },
                    "labels": [],
                    "placement": {
                        "constraints" : "node.platform.os == linux"
                    },
                    "restart_policy": {
                        "condition" : "on-failure",
                        "delay" : "30s"
                    }
                }
            },
            "dependencies" : {
                "zookeeper": ">=1.0.1 <2.0.0"
            }
        },
        "development" : {
            "configuration" : {
                "ports" : ["9092:9092"],
                "volumes" : [],
                "environments" : [],
                "command" : [],
                "depends_on" : [],
                "deploy": {
                    "mode" : {"name":"mode","value":"replicated"},
                    "replicas": {"value":1},
                    "resources": {
                        "limits" : {"name":"memory","value":"2048M"}
                    },
                    "labels": [],
                    "placement": {
                        "constraints" : "node.platform.os == linux"
                    },
                    "restart_policy": {
                        "condition" : "on-failure"
                    }
                }
            },
            "dependencies" :{
                "zookeeper" : "develop"
            }
        }
      }
    }